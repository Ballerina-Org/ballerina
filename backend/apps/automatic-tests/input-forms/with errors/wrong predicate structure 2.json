{
  "types": {
    "UserRole": {
      "fun": "Union",
      "args": [
        {
          "case": "Admin",
          "fields": {
            "IsSuperAdmin":"boolean"
          }
        },
        {
          "case": "SuperUser",
          "fields": {
          }
        },
        {
          "case": "User",
          "fields": {
          }
        }
      ]
    },    
    "GlobalConfig": {
      "extends": [],
      "fields": {
        "Role": "UserRole",
        "Username": "string"
      }
    },
    "Person": {
      "extends": [],
      "fields": {
        "Name": "string",
        "Surname": "string"
      }
    }
  },
  "apis":{
    "entities":{
      "person": {
        "type": "Person",
        "methods": [
          "create",
          "get",
          "update",
          "default"
        ]
      },
      "config": {
        "type": "GlobalConfig",
        "methods": [
          "get"
        ]
      }
    }
  },
  "forms":{
    "person": {
      "type": "Person",
      "fields": {
        "Name": {
          "renderer": "defaultString"
        },
        "Surname": {
          "renderer": "defaultString",
          "visibile":{
            "kind":"match-case",
            "operands":[
              { "kind":"fieldLookup", "operands":[ {"kind":"varLookup", "varName":"global" }, "Role"] },
              { "case":"Admin", "handler":{ "kind":"lambda", "parameter":"adminFields", "body":
                { "kind":"fieldLookup", "operands":[ {"kind":"varLookup", "varName":"adminFields" }, "IsSuperAdmin"] }
              } },
              { "case":"SuperUser", "handler":{ "kind":"lambda", "parameter":"_", "body":true } },
              { "case":"User", "handler":{ "kind":"lambda", "parameter":"_", "body":false } }
            ]
          }
        }
      },
      "tabs": {
        "main": {
          "columns": {
            "main": {
              "groups": {
                "main": [
                  "Name",
                  "Surname"
                ]
              }
            }
          }
        }
      }
    }
  },
  "launchers":{
    "create-person": {
      "kind": "create",
      "form": "person",
      "api": "person",
      "configApi": "config"
    }
  }
}