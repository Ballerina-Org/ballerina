{
  "types": {
    "GlobalConfiguration": {
      "extends": [],
      "fields": {
        "IsAdmin": "boolean"
      }
    },
    "EmploymentsEnum": {
      "fun": "Union",
      "args": [
        {
          "caseName": "Monthly",
          "fields": {}
        },
        {
          "caseName": "Hourly",
          "fields": {}
        },
        {
          "caseName": "Substitute",
          "fields": {}
        }
      ]
    },
    "EmploymentRef": {
      "fields": {
        "Value": "EmploymentsEnum"
      }
    },
    "Assistant": {
      "fields": {
        "Name": "string",
        "FirstHire": "Date",
        "EmploymentType": {
          "fun": "SingleSelection",
          "args": ["EmploymentRef"]
        }
      }
    }
  },
  "apis": {
    "entities": {
      "assistant": {
        "type": "Assistant",
        "methods": ["default"]
      },
      "globalConfiguration": {
        "type": "GlobalConfiguration",
        "methods": ["get"]
      },
      "enumOptions": {
        "employmentTypes": "EmploymentRef"
      }
    }
  },
  "forms": {
    "assistant": {
      "type": "Assistant",
      "renderer": "defaultRecordRenderer",
      "fields": {
        "Name": {
          "label": "First Name",
          "renderer": "defaultString"
        },
        "FirstHire": {
          "label": "First hired at",
          "renderer": "defaultDate"
        },
        "EmploymentType": {
          "label": "Employment type",
          "renderer": "defaultEnum",
          "options": "employmentTypes"
        }
      },
      "tabs": {
        "main": {
          "columns": {
            "groups": {
              "main": [
                "Name",
                "FirstHire",
                "EmploymentType"
              ]
            }
          }
        }
      }
    }
  },
  "launchers": {
    "create-assistant": {
      "kind": "create",
      "form": "assistant",
      "api": "assistant",
      "configApi": "globalConfiguration"
    }
  }
}